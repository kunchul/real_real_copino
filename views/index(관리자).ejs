    <script>
     $(document).ready(function () {
        $(".btn-unload").click(function () {
            $("#modal-unload").show();
        });

        $(".btn-location").click(function () {
            $("#modal-location").show();
            $.ajax({
                url: "/api/unassigned-accounts",
                method: "GET",
                success: function (response) {
                    let tbody = $("#unassigned-accounts");
                    tbody.empty();
                    response.forEach(function(row) {
                        tbody.append(`
                            <tr>
                                <td>${row.ID}</td>
                                <td>${row.CAR}</td>
                                <td>${row.PHONE}</td>
                            </tr>
                        `);
                    });
                },
                error: function () {
                    alert("권한미배정 계정을 가져오는 중 오류가 발생했습니다.");
                }
            });
        });


        $(".close").click(function () {
            $(this).closest(".modal").hide();
        });

        $("#search-btn").click(function () {
            const userId = $("#search-id").val();
            $.ajax({
                url: "/api/search-user",
                method: "POST",
                data: { id: userId },
                success: function (response) {
                    $("#password").val(response.PASSWORD);
                    $("#phone").val(response.PHONE);
                    $("#car").val(response.CAR);
                    $("#car-id").val(response.CAR_ID);
                    $("#part").val(response.PART);
                    $("#role").val(response.ROLE);
                },
                error: function () {
                    alert("사용자 정보를 찾을 수 없습니다.");
                }
            });
        });

        $("#update-btn").click(function () {
            const userId = $("#search-id").val();
            const password = $("#password").val();
            const phone = $("#phone").val();
            const car = $("#car").val();
            const carId = $("#car-id").val();
            const part = $("#part").val();
            const role = $("#role").val();
            $.ajax({
                url: "/api/update-user",
                method: "POST",
                data: {
                    id: userId,
                    password: password,
                    phone: phone,
                    car: car,
                    carId: carId,
                    part: part,
                    role: role
                },
                success: function () {
                    alert("사용자 정보가 업데이트되었습니다.");
                    $("#modal-unload").hide();
                },
                error: function () {
                    alert("업데이트 중 오류가 발생했습니다.");
                }
            });
        });
    });
    </script>
